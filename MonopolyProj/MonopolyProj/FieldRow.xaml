<UserControl x:Class="MonopolyProj.FieldRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyProj"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="2700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:Field x:Name="field1" Grid.Column="0"/>
        <local:Field x:Name="field2" Grid.Column="1"/>
        <local:Field x:Name="field3" Grid.Column="2"/>
        <local:Field x:Name="field4" Grid.Column="3"/>
        <local:Field x:Name="field5" Grid.Column="4"/>
        <local:Field x:Name="field6" Grid.Column="5"/>
        <local:Field x:Name="field7" Grid.Column="6"/>
        <local:Field x:Name="field8" Grid.Column="7"/>
        <local:Field x:Name="field9" Grid.Column="8"/>
    </Grid>
</UserControl>
